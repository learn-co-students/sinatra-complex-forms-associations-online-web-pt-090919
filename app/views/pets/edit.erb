<h1>Update Pet</h1>
<form method="post" action="/pets/<%= @pet.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<p><label for="name">Change <%= @pet.name %>'s Name:</label>
<br>
<input type="text" id="pet_name" name="pet[name]"/></p>
<label>Change Pet's Owner:</label>
<br>
<% @owners.each do |owner| %>
<p><input type="radio" id="<%= owner.id %>" name="owner[id]" value="<%= owner.id %>" <%='checked' if @pet.owner_id == owner.id %> ><%= owner.name %></input></p>
<% end %>  
<p><label>Create New Owner</label> 
<input type="text" name="owner[name]" id="owner_name"></p>
<input type="submit" value="Update Pet"/>
</form>

